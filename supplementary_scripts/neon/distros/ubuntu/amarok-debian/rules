#!/usr/bin/make -f

#export DH_VERBOSE=1
export PATH := /opt/amarok-nightly/bin:$(PATH)

-include /opt/amarok-nightly/cdbs/kde.mk

kde4-wrapper-creation:
	mkdir -p $(DEB_DESTDIR)/usr/bin
		echo "#!/bin/sh" > $(DEB_DESTDIR)/usr/bin/amarok-nightly; \
		echo export PATH=/opt/amarok-nightly/bin:\$$PATH >> $(DEB_DESTDIR)/usr/bin/amarok-nightly; \
		echo export LD_LIBRARY_PATH=/opt/amarok-nightly/lib >> $(DEB_DESTDIR)/usr/bin/amarok-nightly; \
		echo export PKG_CONFIG_PATH=/opt/amarok-nightly/lib/pkgconfig >> $(DEB_DESTDIR)/usr/bin/amarok-nightly-vars; \
		echo export QTDIR=/opt/amarok-nightly >> $(DEB_DESTDIR)/usr/bin/amarok-nightly; \
		echo export KDEDIR=/opt/amarok-nightly >> $(DEB_DESTDIR)/usr/bin/amarok-nightly; \
		echo export KDEHOME=~/.amarok-nightly >> $(DEB_DESTDIR)/usr/bin/amarok-nightly; \
		echo export KDETMP=/tmp/\$$USER-amarok-nightly >> $(DEB_DESTDIR)/usr/bin/amarok-nightly; \
		echo mkdir -p \$$KDETMP >> $(DEB_DESTDIR)/usr/bin/amarok-nightly; \
		echo export KDEDIRS=\$$KDEDIR >> $(DEB_DESTDIR)/usr/bin/amarok-nightly; \
		echo /opt/amarok-nightly/bin/kbuildsycoca4 \"\$$@\" >> $(DEB_DESTDIR)/usr/bin/amarok-nightly; \
		echo /opt/amarok-nightly/bin/amarok \"\$$@\" >> $(DEB_DESTDIR)/usr/bin/amarok-nightly; \
		chmod 755 $(DEB_DESTDIR)/usr/bin/amarok-nightly; \

		echo "#!/bin/sh" > $(DEB_DESTDIR)/usr/bin/amarok-nightly-vars; \
		echo export PATH=/opt/amarok-nightly/bin:\$$PATH >> $(DEB_DESTDIR)/usr/bin/amarok-nightly-vars; \
		echo export LD_LIBRARY_PATH=/opt/amarok-nightly/lib >> $(DEB_DESTDIR)/usr/bin/amarok-nightly-vars; \
		echo export PKG_CONFIG_PATH=/opt/amarok-nightly/lib/pkgconfig >> $(DEB_DESTDIR)/usr/bin/amarok-nightly-vars-vars; \
		echo export QTDIR=/opt/amarok-nightly >> $(DEB_DESTDIR)/usr/bin/amarok-nightly-vars; \
		echo export KDEDIR=/opt/amarok-nightly >> $(DEB_DESTDIR)/usr/bin/amarok-nightl-varsy; \
		echo export KDEHOME=~/.amarok-nightly >> $(DEB_DESTDIR)/usr/bin/amarok-nightly-vars; \
		echo export KDETMP=/tmp/\$$USER-amarok-nightly >> $(DEB_DESTDIR)/usr/bin/amarok-nightly-vars; \
		echo mkdir -p \$$KDETMP >> $(DEB_DESTDIR)/usr/bin/amarok-nightly-vars; \
		echo export KDEDIRS=\$$KDEDIR >> $(DEB_DESTDIR)/usr/bin/amarok-nightly-vars; \
		chmod 755 $(DEB_DESTDIR)/usr/bin/amarok-nightly-vars; \

	mkdir -p $(DEB_DESTDIR)/usr/share/applications
		cat $(DEB_DESTDIR)/opt/amarok-nightly/share/applications/kde4/amarok.desktop \
		| sed 's/Name.*=.*$$/& Nightly/' \
		| sed 's/Exec=[a-z]*/&-nightly/' \
		 > $(DEB_DESTDIR)/usr/share/applications/amarok-nightly.desktop; \

	rm $(DEB_DESTDIR)/opt/amarok-nightly/share/applications/kde4/amarok.desktop

	mkdir -p $(DEB_DESTDIR)/opt/amarok-nightly/share/kde4/servicetypes
	cp -r $(DEB_SRCDIR)/src/context/plasma/servicetypes/* $(DEB_DESTDIR)/opt/amarok-nightly/share/kde4/servicetypes/

common-install-indep:: kde4-wrapper-creation
common-install-arch:: kde4-wrapper-creation

clean::
	
